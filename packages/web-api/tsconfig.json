{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./typings"],
    "lib": [
      // "es2019" is supported thru the usage of core-js,
      // so be careful when using something like .flatMap
      // or .flat. Have to import the appropriate core-js package.
      "es2019",
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
