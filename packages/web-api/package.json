{
  "name": "@caravan/buddy-reading-web-api",
  "version": "1.0.0",
  "description": "Web API for Caravan's buddy reading website",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:clean && tsc",
    "build:clean": "rimraf ./dist",
    "build:mongo": "cd ../mongo && npm run build",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "dev": "cross-env NODE_ENV=development npm run build:mongo && nodemon src/index.ts",
    "dev:prebuilt": "cross-env NODE_ENV=development nodemon --inspect src/index.ts",
    "dev:watch": "cross-env NODE_ENV=development npm run build:mongo && nodemon --inspect src/index.ts",
    "lint": "eslint \"src/**/*\"",
    "lint:fix": "eslint \"src/**/*\" --quiet --fix",
    "test": "jest"
  },
  "repository": "https://github.com/quinnturner/buddy-reading-website/tree/master/packages/web-api",
  "keywords": [
    "caravan",
    "buddy",
    "reading",
    "api"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/quinnturner/buddy-reading-website/issues"
  },
  "homepage": "https://github.com/quinnturner/buddy-reading-website#README",
  "dependencies": {
    "@caravan/buddy-reading-mongo": "1.0.0",
    "@google-cloud/pubsub": "^0.30.3",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "btoa": "^1.2.1",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^1.3.3",
    "core-js": "^3.2.1",
    "cross-env": "^5.2.0",
    "date-fns": "^2.2.1",
    "discord.js": "^11.5.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.1.1",
    "fuse.js": "^3.4.5",
    "helmet": "^3.20.0",
    "mongoose": "^5.6.8",
    "node-fetch": "^2.6.0",
    "slugify": "^1.3.4",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@caravan/buddy-reading-types": "1.0.0",
    "@types/btoa": "^1.2.3",
    "@types/cookie-parser": "^1.4.1",
    "@types/cookie-session": "^2.0.37",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.16",
    "@types/mongoose": "5.5.7",
    "@types/node": "^10.14.17",
    "@types/node-fetch": "^2.5.0",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^22.14.1",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "24.7.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "utility-types": "^3.7.0"
  }
}
